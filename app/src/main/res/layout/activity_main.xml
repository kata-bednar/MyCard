<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mycard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/snowman"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishing you a snowy December!"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:fontFamily="@font/georgiaz"
        android:id="@+id/message_text_view"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Mom"
        android:textSize="58sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/message_text_view"
        android:layout_alignParentRight="true"
        android:padding="24dp"
        android:fontFamily="@font/freescr"
/>
</RelativeLayout>
